<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tuyrt.uieffect.view.button.loading.LoadingButton
            android:id="@+id/loadingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_main_color_selector"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:minHeight="45dp"
            android:padding="8dp"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:enableShrink="true"
            app:loadingStokeWidth="3dp"
            app:disableClickOnLoading="true"
            app:endCompleteDrawable="@drawable/ic_successful"
            app:endFailDrawable="@drawable/ic_fail"
            app:loadingDrawablePosition="Start" />

    </LinearLayout>
</layout>