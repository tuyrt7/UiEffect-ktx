<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlowLayoutAttrs">
        <attr name="horizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
        <attr name="itemSize" format="dimension" />
        <attr name="itemColor" format="color" />
        <attr name="backgroundResource" format="reference" />
        <attr name="textPaddingH" format="dimension" />
        <attr name="textPaddingV" format="dimension" />
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color"/>
        <attr name="baselineColor" format="color"/>
        <attr name="maxValue" format="integer"/>
        <attr name="waveStokeWidth" format="dimension"/>
        <attr name="invalidateTime" format="integer"/>
        <attr name="space" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="WaveLineView">
        <!--背景色-->
        <attr name="wlvBackgroundColor" format="color"/>
        <!--波浪线的颜色-->
        <attr name="wlvLineColor" format="color"/>
        <!--中间粗波浪曲线的宽度-->
        <attr name="wlvThickLineWidth" format="dimension"/>
        <!--三条细波浪曲线的宽度-->
        <attr name="wlvFineLineWidth" format="dimension"/>
        <!--波浪线移动的速度，默认值为290F，方向从左向右，你可以使用负数改变移动方向-->
        <attr name="wlvMoveSpeed" format="float"/>
        <!--采样率，动画效果越大越精细，默认64-->
        <attr name="wlvSamplingSize" format="integer"/>
        <!--灵敏度，范围[1,10]，越大越灵敏，默认值为5-->
        <attr name="wlvSensibility" format="integer"/>
    </declare-styleable>
</resources>